<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upload_image"
    tools:ignore="ExtraText"><![CDATA[

    tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="90dp" />





    ]]>

    <Button
        android:id="@+id/button3"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="31dp"
        android:background="#a09d9b"
        android:text="@string/add_image"
        android:textColor="#0d0804"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        tools:ignore="ExtraText" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="12dp"
        android:text="@string/baby_gallery"
        android:textColor="#3449bc"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/imageFilterView" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageFilterView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gentle_begins_logo" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="398dp"
        android:layout_height="44dp"
        android:layout_marginBottom="54dp"
        android:background="#6bc6de"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="98dp"
        android:layout_height="94dp"
        android:layout_marginStart="58dp"
        android:layout_marginBottom="306dp"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        tools:ignore="ContentDescription,ImageContrastCheck"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/button4"
        android:layout_width="85dp"
        android:layout_height="51dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="41dp"
        android:background="#a09d9b"
        android:text="@string/back_button_text"
        android:textColor="#0d0804"
        app:layout_constraintEnd_toStartOf="@+id/imageFilterView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>