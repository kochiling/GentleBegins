<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminviewuserRecCard"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/viewUserName"
            android:layout_width="350dp"
            android:layout_height="28dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="17dp"
            android:text="Name"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/onlyBabynameText"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:text="Baby's name: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/onlyBabygenderText"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="110dp"
            android:text="Baby's gender: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/onlyBabybirthdayText"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="140dp"
            android:text="Baby's birthday: "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/viewUserBabyname"
            android:layout_width="223dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="80dp"
            android:layout_toEndOf="@+id/onlyBabynameText"
            android:text="Baby's name"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/viewUserRelationship"
            android:layout_width="225dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/onlyRelationshipText"
            android:text="Relationship"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/viewUserBabygender"
            android:layout_width="212dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="110dp"
            android:layout_toEndOf="@+id/onlyBabygenderText"
            android:text="Baby's gender"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/viewUserBabybirthday"
            android:layout_width="210dp"
            android:layout_height="25dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="140dp"
            android:layout_toEndOf="@+id/onlyBabybirthdayText"
            android:text="Baby's birthday"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/onlyRelationshipText"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:text="Relationship: "
            android:textSize="15sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>